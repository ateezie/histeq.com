{
  "name": "historic-equity-theme",
  "version": "1.0.0",
  "description": "Historic Equity Inc. WordPress Theme with TailwindCSS, Webpack, and modern build tools",
  "main": "webpack.config.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "start": "webpack serve --mode development --open",
    "tailwind-dev": "tailwindcss -i ./static/css/input.css -o ./static/css/style.css --watch",
    "tailwind-build": "tailwindcss -i ./static/css/input.css -o ./static/css/style.css --minify"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "historic-equity",
    "webpack",
    "babel"
  ],
  "author": "Historic Equity Inc.",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.0",
    "autoprefixer": "^10.4.14",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "mini-css-extract-plugin": "^2.7.0",
    "clean-webpack-plugin": "^4.0.0",
    "@playwright/test": "^1.40.0",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0"
  },
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "start": "webpack serve --mode development --open",
    "tailwind-dev": "tailwindcss -i ./static/css/input.css -o ./static/css/style.css --watch",
    "tailwind-build": "tailwindcss -i ./static/css/input.css -o ./static/css/style.css --minify",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug"
  }
}