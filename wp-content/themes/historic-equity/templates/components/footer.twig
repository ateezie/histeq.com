{#
  Historic Equity Footer Component - Exact /design/cta+footer.png Match
  White background with multi-column layout exactly matching design
#}

<footer class="site-footer bg-white border-t border-gray-200">
    <div class="container mx-auto px-6 lg:px-12 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 lg:gap-12">

            {# Logo and Contact Information - Left Column #}
            <div class="lg:col-span-1">
                <div class="mb-6">
                    {% if global_fields.footer_logo %}
                        <img src="{{ global_fields.footer_logo.url }}"
                             alt="{{ global_fields.footer_logo.alt|default(global_fields.company_name ~ ' Logo')|default('Historic Equity Inc. Logo') }}"
                             class="h-8 w-auto">
                    {% else %}
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">{{ global_fields.company_name|default('Historic Equity Inc.') }}</h3>
                    {% endif %}
                    {% if global_fields.footer_tagline %}
                        <p class="text-sm text-gray-600 mt-2">{{ global_fields.footer_tagline }}</p>
                    {% endif %}
                </div>

                {% if global_fields.footer_contact_info %}
                    <div class="mb-6">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">Address</h4>
                        <a href="https://www.google.com/maps/search/?api=1&query={{ global_fields.footer_contact_info.address|default('123 Historic Lane, Preservation City, PC 12345')|url_encode }}"
                           class="text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200"
                           target="_blank" rel="noopener"
                           title="Open in Google Maps">
                            {{ global_fields.footer_contact_info.address|default('123 Historic Lane, Preservation City, PC 12345') }}
                        </a>
                    </div>

                    <div class="mb-6">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">Contact</h4>
                        {% if global_fields.footer_contact_info.phone %}
                            <p class="text-sm text-gray-600">
                                <a href="tel:{{ global_fields.footer_contact_info.phone }}" class="hover:text-gray-900 transition-colors duration-200">{{ global_fields.footer_contact_info.phone }}</a>
                            </p>
                        {% endif %}
                        {% if global_fields.footer_contact_info.email %}
                            <p class="text-sm text-gray-600">
                                <a href="mailto:{{ global_fields.footer_contact_info.email }}" class="hover:text-gray-900 transition-colors duration-200">{{ global_fields.footer_contact_info.email }}</a>
                            </p>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="mb-6">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">Address</h4>
                        <a href="https://www.google.com/maps/search/?api=1&query=1034%20South%20Brentwood%20Blvd%2C%20Ste%201480%2C%20Saint%20Louis%2C%20MO%2063117"
                           class="text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200"
                           target="_blank" rel="noopener"
                           title="Open in Google Maps">
                            {{ global_fields.headquarters_address|default('1034 South Brentwood Blvd, Ste 1480<br>Saint Louis, MO 63117')|raw }}
                        </a>
                    </div>

                    <div class="mb-6">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">Contact</h4>
                        <p class="text-sm text-gray-600">
                            <a href="tel:314-862-1414" class="hover:text-gray-900 transition-colors duration-200">314-862-1414</a>
                        </p>
                        <p class="text-sm text-gray-600">
                            <a href="mailto:info@histeq.com" class="hover:text-gray-900 transition-colors duration-200">info@histeq.com</a>
                        </p>
                    </div>
                {% endif %}

                {# Social Media Icons #}
                {% if global_fields.footer_social_links %}
                    <div class="flex items-center space-x-3">
                        {% for social in global_fields.footer_social_links %}
                            <a href="{{ social.url }}" class="text-gray-600 hover:text-gray-900 transition-colors duration-200" aria-label="{{ social.platform|title }}" target="_blank" rel="noopener">
                                {% if social.platform == 'facebook' %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                                    </svg>
                                {% elseif social.platform == 'instagram' %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.618 5.367 11.986 11.988 11.986 6.618 0 11.986-5.368 11.986-11.986C24.003 5.367 18.635.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.401-3.205-1.086C4.154 15.042 3.5 13.467 3.5 11.5s.654-3.542 1.744-4.402c.757-.685 1.908-1.086 3.205-1.086 1.297 0 2.448.401 3.205 1.086C12.846 7.958 13.5 9.533 13.5 11.5s-.654 3.542-1.744 4.402c-.757.685-1.908 1.086-3.205 1.086z"/>
                                    </svg>
                                {% elseif social.platform == 'twitter' or social.platform == 'x' %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                                    </svg>
                                {% elseif social.platform == 'linkedin' %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                    </svg>
                                {% elseif social.platform == 'youtube' %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.618 5.367 11.986 11.988 11.986 6.618 0 11.986-5.368 11.986-11.986C24.003 5.367 18.635.001 12.017.001z"/>
                                    </svg>
                                {% endif %}
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <!-- Fallback social media -->
                    <div class="flex items-center space-x-3">
                        <a href="#" class="text-gray-600 hover:text-gray-900 transition-colors duration-200" aria-label="Facebook">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                        <a href="#" class="text-gray-600 hover:text-gray-900 transition-colors duration-200" aria-label="LinkedIn">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                    </div>
                {% endif %}
            </div>

            {# Navigation Column #}
            <div class="lg:col-span-1">
                <div class="space-y-3">
                    <a href="/" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200">Home</a>
                    <a href="/meet-our-team" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200">Meet Our Team</a>
                    <a href="/contact" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200">Contact</a>
                </div>
            </div>

            {# Empty columns for spacing #}
            <div class="lg:col-span-2"></div>
        </div>

        {# Footer Bottom Row #}
        <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex flex-col sm:flex-row items-center justify-between space-y-4 sm:space-y-0">
                <p class="text-sm text-gray-600">Â© {{ "now"|date("Y") }} {{ global_fields.company_name|default('Historic Equity Inc.') }} All rights reserved.</p>

                <div class="flex items-center">
                    <a href="/privacy-policy" class="text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200">Privacy policy</a>
                </div>
            </div>
        </div>
    </div>
</footer>