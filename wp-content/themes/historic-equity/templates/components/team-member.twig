{#
  Historic Equity Team Member Component
  Professional team member cards with photos, roles, bios, and social links
#}

{% set member = member|default({}) %}

<div class="team-member card group hover:shadow-card-hover transition-all duration-300">
    <!-- Member Photo -->
    <div class="relative overflow-hidden">
        {% if member.photo %}
            <img src="{{ member.photo }}"
                 alt="{{ member.name }}"
                 class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300">
        {% else %}
            <!-- Default Avatar -->
            <div class="w-full h-80 bg-neutral-lighter flex items-center justify-center">
                <svg class="w-20 h-20 text-neutral-medium" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
            </div>
        {% endif %}

        <!-- Social Links Overlay -->
        {% if member.social %}
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-navy-900 to-transparent p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="flex justify-center space-x-4">
                    {% if member.social.linkedin %}
                        <a href="{{ member.social.linkedin }}" target="_blank" rel="noopener"
                           class="text-white hover:text-secondary-500 transition-colors duration-200" aria-label="LinkedIn">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                    {% endif %}
                    {% if member.social.twitter %}
                        <a href="{{ member.social.twitter }}" target="_blank" rel="noopener"
                           class="text-white hover:text-secondary-500 transition-colors duration-200" aria-label="Twitter">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                            </svg>
                        </a>
                    {% endif %}
                    {% if member.social.email %}
                        <a href="mailto:{{ member.social.email }}"
                           class="text-white hover:text-secondary-500 transition-colors duration-200" aria-label="Email">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>

    <!-- Member Info -->
    <div class="p-6">
        <!-- Name and Title -->
        <div class="text-center mb-4">
            <h3 class="text-xl font-bold text-navy-900 mb-1">
                {{ member.name|default('Team Member') }}
            </h3>
            <p class="text-primary-600 font-medium">
                {{ member.title|default('Position') }}
            </p>
        </div>

        <!-- Bio -->
        {% if member.bio %}
            <p class="text-navy-700 text-sm leading-relaxed text-center">
                {{ member.bio }}
            </p>
        {% endif %}

        <!-- Specialties/Skills -->
        {% if member.specialties %}
            <div class="mt-4 pt-4 border-t border-neutral-lighter">
                <div class="flex flex-wrap gap-2 justify-center">
                    {% for specialty in member.specialties %}
                        <span class="bg-neutral-200 text-navy-700 text-xs px-2 py-1 rounded-full">
                            {{ specialty }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>

{# Team Member Grid Component #}
{% if team_members %}
<section class="team-section section-padding" id="team">
    <div class="container-custom">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-navy-900 mb-4">
                {{ section_title|default('Meet Our Experts') }}
            </h2>
            <p class="text-lg text-navy-700 max-w-2xl mx-auto">
                {{ section_subtitle|default('Dedicated professionals transforming historic rehabilitation projects through strategic tax credit investments') }}
            </p>
        </div>

        <!-- Innovators Section -->
        {% if team_members.innovators %}
            <div class="mb-16">
                <div class="text-center mb-8">
                    <h3 class="text-2xl font-bold text-navy-900 mb-2">Innovators</h3>
                    <p class="text-navy-700">{{ innovators_subtitle|default('Our team') }}</p>
                </div>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {% for member in team_members.innovators %}
                        {% include 'components/team-member.twig' with { member: member } %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <!-- Full Team Grid -->
        {% if not team_members.innovators %}
            <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                {% for member in team_members %}
                    {% include 'components/team-member.twig' with { member: member } %}
                {% endfor %}
            </div>
        {% endif %}

        <!-- Hiring Call-to-Action -->
        {% if show_hiring_cta|default(true) %}
            <div class="mt-16 text-center">
                <div class="bg-neutral-white border border-neutral-lighter rounded-2xl p-8 lg:p-12 max-w-2xl mx-auto">
                    <h3 class="text-2xl font-bold text-navy-900 mb-4">We're hiring!</h3>
                    <p class="text-navy-700 mb-6">
                        Join our dynamic team and help transform historic properties
                    </p>
                    <a href="/careers" class="btn-primary">
                        Open positions
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</section>
{% endif %}