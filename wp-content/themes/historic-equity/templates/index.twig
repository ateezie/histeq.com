{% extends "base.twig" %}

{% block content %}
    <main class="main-content">

        {# Hero Section - Modern & Professional #}
        <section class="hero-section relative overflow-hidden bg-gradient-to-br from-navy-900 via-navy-800 to-primary-900" data-testid="hero-section">
            <!-- Background Pattern -->
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gradient-to-r from-navy-900/90 to-primary-900/80"></div>
                <!-- Subtle geometric pattern for modern feel -->
                <div class="absolute inset-0 opacity-10">
                    <svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg">
                        <g fill="none" fill-rule="evenodd">
                            <g fill="#BD572B" fill-opacity="0.1">
                                <path d="M0 0h60v60H0z"/>
                                <circle cx="30" cy="30" r="15"/>
                            </g>
                        </g>
                    </svg>
                </div>
            </div>

            <!-- Hero Content -->
            <div class="relative z-10">
                <div class="container mx-auto px-4 lg:px-8">
                    <div class="min-h-screen flex items-center py-20 lg:py-32">
                        <div class="grid lg:grid-cols-2 gap-12 items-center w-full">
                            <!-- Main Hero Content -->
                            <div class="max-w-2xl">
                                <!-- Trust Indicators -->
                                <div class="flex items-center space-x-6 mb-8" data-testid="trust-indicators">
                                    <div class="text-center">
                                        <div class="text-2xl font-bold text-secondary-500">{{ company_info.years_experience }}+</div>
                                        <div class="text-sm text-neutral-300">Years Experience</div>
                                    </div>
                                    <div class="text-center">
                                        <div class="text-2xl font-bold text-secondary-500">${{ company_info.total_investment }}</div>
                                        <div class="text-sm text-neutral-300">QRE Invested</div>
                                    </div>
                                    <div class="text-center">
                                        <div class="text-2xl font-bold text-secondary-500">{{ company_info.states_served }}+</div>
                                        <div class="text-sm text-neutral-300">States Served</div>
                                    </div>
                                </div>

                                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6 font-montserrat">
                                    Maximize Your<br>
                                    <span class="text-secondary-500">Historic Tax Credits</span><br>
                                    With Expert Investment
                                </h1>

                                <p class="text-xl lg:text-2xl text-neutral-100 leading-relaxed mb-8">
                                    {{ company_info.name }} specializes in State Historic Tax Credit investments,
                                    helping property owners preserve historic buildings while maximizing financial returns.
                                </p>

                                <!-- Portfolio Metrics -->
                                <div class="mb-8" data-testid="portfolio-metrics">
                                    <div class="grid grid-cols-2 gap-6 text-center">
                                        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                            <div class="text-2xl font-bold text-white">{{ company_info.total_projects }}</div>
                                            <div class="text-sm text-neutral-300">Successful Projects</div>
                                        </div>
                                        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                            <div class="text-2xl font-bold text-white">{{ company_info.total_investment }}</div>
                                            <div class="text-sm text-neutral-300">QRE Portfolio</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Primary CTA -->
                                <div class="flex flex-col sm:flex-row gap-4">
                                    <a href="#contact-form"
                                       class="inline-flex items-center justify-center px-8 py-4 bg-secondary-500 text-navy-900 font-semibold rounded-lg hover:bg-secondary-400 transition-all duration-300 transform hover:scale-105 shadow-lg"
                                       data-testid="hero-cta">
                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-2.212-.273l-3.181.638a2 2 0 01-2.238-2.238l.638-3.181A8.955 8.955 0 013 12a8 8 0 018-8 8 8 0 018 8z"/>
                                        </svg>
                                        Start Your Project Consultation
                                    </a>
                                    <a href="#services"
                                       class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-navy-900 transition-all duration-300">
                                        Learn About SHTC Process
                                    </a>
                                </div>
                            </div>

                            <!-- Hero Contact Form -->
                            <div class="bg-white/95 backdrop-blur-sm rounded-xl p-8 shadow-2xl" data-testid="contact-form">
                                <h3 class="text-2xl font-bold text-navy-900 mb-6">Get Your Project Evaluated</h3>
                                <form class="space-y-4" action="/wp-json/historic-equity/v1/contact" method="POST">
                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <label for="first_name" class="block text-sm font-medium text-navy-900 mb-2">First Name *</label>
                                            <input type="text" id="first_name" name="first_name" required
                                                   class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                                                   autocomplete="given-name">
                                        </div>
                                        <div>
                                            <label for="last_name" class="block text-sm font-medium text-navy-900 mb-2">Last Name *</label>
                                            <input type="text" id="last_name" name="last_name" required
                                                   class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                                                   autocomplete="family-name">
                                        </div>
                                    </div>

                                    <div>
                                        <label for="email" class="block text-sm font-medium text-navy-900 mb-2">Email Address *</label>
                                        <input type="email" id="email" name="email" required
                                               class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                                               autocomplete="email">
                                    </div>

                                    <div>
                                        <label for="phone" class="block text-sm font-medium text-navy-900 mb-2">Phone Number</label>
                                        <input type="tel" id="phone" name="phone"
                                               class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                                               autocomplete="tel">
                                    </div>

                                    <div>
                                        <label for="project_location" class="block text-sm font-medium text-navy-900 mb-2">Project Location *</label>
                                        <input type="text" id="project_location" name="project_location" required
                                               placeholder="City, State"
                                               class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                                    </div>

                                    <div>
                                        <label for="property_type" class="block text-sm font-medium text-navy-900 mb-2">Property Type *</label>
                                        <select id="property_type" name="property_type" required
                                                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                                            <option value="">Select Property Type</option>
                                            {% for property_type in contact_form_config.property_types %}
                                                <option value="{{ property_type }}">{{ property_type }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div>
                                        <label for="message" class="block text-sm font-medium text-navy-900 mb-2">Project Description *</label>
                                        <textarea id="message" name="message" rows="3" required
                                                  placeholder="Brief description of your historic rehabilitation project..."
                                                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"></textarea>
                                    </div>

                                    <div class="flex items-start">
                                        <input type="checkbox" id="consent_marketing" name="consent_marketing"
                                               class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-neutral-300 rounded">
                                        <label for="consent_marketing" class="ml-2 text-sm text-neutral-600">
                                            I agree to receive marketing communications about SHTC opportunities and Historic Equity services.
                                        </label>
                                    </div>

                                    <button type="submit"
                                            class="w-full bg-primary-600 text-white font-semibold py-4 px-6 rounded-lg hover:bg-primary-700 transition-colors duration-200 flex items-center justify-center">
                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                                        </svg>
                                        Get Project Evaluation
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
                <a href="#mission" class="text-white hover:text-secondary-500 transition-colors duration-200">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                    </svg>
                </a>
            </div>
        </section>

        {# SHTC Services Overview Section #}
        <section id="services" class="py-16 lg:py-24 bg-off-white" data-testid="services-overview">
            <div class="container mx-auto px-4 lg:px-8">
                <div class="text-center mb-16">
                    <span class="inline-block px-4 py-2 bg-secondary-500 text-navy-900 font-semibold rounded-full text-sm mb-4">
                        State Historic Tax Credits
                    </span>
                    <h2 class="text-3xl lg:text-5xl font-bold text-navy-900 mb-6 max-w-4xl mx-auto">
                        Maximize Your Investment with Expert SHTC Partnership
                    </h2>
                    <p class="text-xl text-navy-700 leading-relaxed max-w-3xl mx-auto">
                        Historic Equity specializes in State Historic Tax Credit investments, helping property owners
                        unlock the full financial potential of their historic rehabilitation projects.
                    </p>
                    <div class="w-24 h-1 bg-primary-600 mx-auto mt-8"></div>
                </div>

                <!-- SHTC Benefits -->
                <div class="mb-16" data-testid="shtc-benefits">
                    <div class="grid lg:grid-cols-3 gap-8">
                        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6">
                                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-navy-900 mb-4">Tax Credit Monetization</h3>
                            <p class="text-navy-700 leading-relaxed">
                                Convert your 20% federal and state historic tax credits into immediate cash flow to fund your rehabilitation project.
                            </p>
                        </div>

                        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
                            <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mb-6">
                                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H7m2 0v-6a2 2 0 012-2h2a2 2 0 012 2v6m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v8"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-navy-900 mb-4">Historic Preservation</h3>
                            <p class="text-navy-700 leading-relaxed">
                                Preserve architectural heritage while meeting modern functionality requirements with our experienced rehabilitation guidance.
                            </p>
                        </div>

                        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
                            <div class="w-16 h-16 bg-light-blue-100 rounded-full flex items-center justify-center mb-6">
                                <svg class="w-8 h-8 text-light-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-navy-900 mb-4">Market Expertise</h3>
                            <p class="text-navy-700 leading-relaxed">
                                Navigate complex SHTC regulations across {{ company_info.states_served }}+ states with our deep market knowledge and proven track record.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Investment Process -->
                <div class="mb-16" data-testid="investment-process">
                    <div class="text-center mb-12">
                        <h3 class="text-3xl font-bold text-navy-900 mb-4">Our SHTC Investment Process</h3>
                        <p class="text-lg text-navy-700 max-w-2xl mx-auto">
                            Streamlined approach to maximize your historic tax credit benefits
                        </p>
                    </div>

                    <div class="grid lg:grid-cols-4 gap-8">
                        <div class="text-center relative">
                            <div class="w-16 h-16 bg-primary-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">1</div>
                            <h4 class="text-xl font-semibold text-navy-900 mb-2">Project Evaluation</h4>
                            <p class="text-navy-700">Comprehensive assessment of SHTC eligibility and financial viability</p>
                            <!-- Connection line -->
                            <div class="hidden lg:block absolute top-8 left-full w-8 h-0.5 bg-neutral-300 transform translate-x-0"></div>
                        </div>

                        <div class="text-center relative">
                            <div class="w-16 h-16 bg-secondary-500 text-navy-900 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">2</div>
                            <h4 class="text-xl font-semibold text-navy-900 mb-2">Investment Structuring</h4>
                            <p class="text-navy-700">Optimal deal structure to maximize returns and minimize risk</p>
                            <div class="hidden lg:block absolute top-8 left-full w-8 h-0.5 bg-neutral-300 transform translate-x-0"></div>
                        </div>

                        <div class="text-center relative">
                            <div class="w-16 h-16 bg-light-blue-400 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">3</div>
                            <h4 class="text-xl font-semibold text-navy-900 mb-2">Capital Deployment</h4>
                            <p class="text-navy-700">Strategic funding to support your rehabilitation timeline</p>
                            <div class="hidden lg:block absolute top-8 left-full w-8 h-0.5 bg-neutral-300 transform translate-x-0"></div>
                        </div>

                        <div class="text-center">
                            <div class="w-16 h-16 bg-navy-900 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">4</div>
                            <h4 class="text-xl font-semibold text-navy-900 mb-2">Project Completion</h4>
                            <p class="text-navy-700">Ongoing support through certification and credit realization</p>
                        </div>
                    </div>
                </div>

                <!-- CTA for Services -->
                <div class="text-center">
                    <a href="#contact-form"
                       class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
                       data-testid="service-cta">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-2.212-.273l-3.181.638a2 2 0 01-2.238-2.238l.638-3.181A8.955 8.955 0 013 12a8 8 0 018-8 8 8 0 018 8z"/>
                        </svg>
                        Discuss Your Project Today
                    </a>
                </div>
            </div>
        </section>

        {# Featured Projects Showcase Section #}
        <section class="py-16 lg:py-24 bg-gray-50" data-testid="projects-showcase">
            <div class="container mx-auto px-4 lg:px-8">
                <div class="text-center mb-16">
                    <h2 class="text-3xl lg:text-4xl font-bold text-navy-900 mb-6 font-montserrat">
                        Featured Historic Preservation Projects
                    </h2>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
                        Discover our portfolio of successful SHTC investments across 17+ states,
                        showcasing how we maximize benefits for property owners while preserving America's architectural heritage.
                    </p>
                    <div class="w-24 h-1 bg-primary-600 mx-auto"></div>
                </div>

                {# Project Grid #}
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
                    {% if featured_projects %}
                        {% for project in featured_projects|slice(0, 6) %}
                            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300"
                                 data-testid="project-card">
                                {% if project.featured_image %}
                                    <div class="aspect-w-16 aspect-h-12 bg-gray-200">
                                        <img src="{{ project.featured_image.src|resize(400, 300) }}"
                                             alt="{{ project.featured_image.alt ?: project.title }}"
                                             class="w-full h-48 object-cover"/>
                                    </div>
                                {% endif %}
                                <div class="p-6">
                                    <div class="flex items-center justify-between mb-3">
                                        <span class="inline-block px-3 py-1 bg-primary-100 text-primary-800 text-sm font-medium rounded-full">
                                            {{ project.meta('project_state') ?: 'Missouri' }}
                                        </span>
                                        <span class="text-secondary-600 font-semibold text-sm">
                                            {{ project.meta('project_value') ?: '$2.5M QRE' }}
                                        </span>
                                    </div>
                                    <h3 class="text-xl font-bold text-navy-900 mb-2 font-montserrat">
                                        {{ project.title }}
                                    </h3>
                                    <p class="text-gray-600 text-sm leading-relaxed mb-4">
                                        {{ project.meta('project_description') ?: project.preview(120) }}
                                    </p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-gray-500">
                                            Built {{ project.meta('construction_year') ?: '1920s' }}
                                        </span>
                                        <a href="{{ project.link }}"
                                           class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                                            View Project →
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        {# Fallback project cards for demonstration #}
                        {% for i in 1..3 %}
                            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300"
                                 data-testid="project-card-demo">
                                <div class="aspect-w-16 aspect-h-12 bg-gradient-to-br from-primary-400 to-secondary-500 h-48 flex items-center justify-center">
                                    <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m14 0v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5m0 0H5"/>
                                    </svg>
                                </div>
                                <div class="p-6">
                                    <div class="flex items-center justify-between mb-3">
                                        <span class="inline-block px-3 py-1 bg-primary-100 text-primary-800 text-sm font-medium rounded-full">
                                            {% if i == 1 %}Missouri{% elseif i == 2 %}Iowa{% else %}Kansas{% endif %}
                                        </span>
                                        <span class="text-secondary-600 font-semibold text-sm">
                                            {% if i == 1 %}$3.2M QRE{% elseif i == 2 %}$1.8M QRE{% else %}$4.1M QRE{% endif %}
                                        </span>
                                    </div>
                                    <h3 class="text-xl font-bold text-navy-900 mb-2 font-montserrat">
                                        {% if i == 1 %}Historic Warehouse Lofts{% elseif i == 2 %}Downtown Office Building{% else %}Art Deco Theater{% endif %}
                                    </h3>
                                    <p class="text-gray-600 text-sm leading-relaxed mb-4">
                                        {% if i == 1 %}Industrial warehouse converted to luxury residential lofts with maximized SHTC benefits and modern amenities.{%
                                        elseif i == 2 %}Historic office building rehabilitation preserving original architecture while creating modern workspace.{%
                                        else %}Restored 1930s theater bringing cultural heritage back to downtown district with full SHTC utilization.{% endif %}
                                    </p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-gray-500">
                                            Built {% if i == 1 %}1920s{% elseif i == 2 %}1910s{% else %}1930s{% endif %}
                                        </span>
                                        <a href="/projects"
                                           class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                                            View Project →
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                {# Call to Action #}
                <div class="text-center">
                    <a href="/projects"
                       class="inline-flex items-center px-8 py-4 bg-navy-900 text-white font-semibold rounded-lg hover:bg-navy-800 transition-colors duration-200"
                       data-testid="projects-cta">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21l-7-5-7 5V5a2 2 0 012-2h10a2 2 0 012 2v16z"/>
                        </svg>
                        View Full Project Portfolio
                    </a>
                </div>
            </div>
        </section>

        {# Company Credibility & Trust Section #}
        <section class="py-16 lg:py-24 bg-navy-900" data-testid="company-credibility">
            <div class="container mx-auto px-4 lg:px-8">
                <div class="text-center mb-16">
                    <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6 font-montserrat">
                        Trusted SHTC Investment Partner Since 2001
                    </h2>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                        With over two decades of expertise, Historic Equity has established itself as the premier
                        State Historic Tax Credit investment firm, delivering exceptional results across America.
                    </p>
                </div>

                {# Credibility Stats Grid #}
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
                    <div class="text-center" data-testid="stat-years">
                        <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-600 rounded-full mb-4">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="text-4xl font-bold text-secondary-500 mb-2">{{ trust_indicators.years_experience }}+</div>
                        <div class="text-white font-medium">Years Experience</div>
                        <div class="text-gray-400 text-sm">Industry Leadership</div>
                    </div>

