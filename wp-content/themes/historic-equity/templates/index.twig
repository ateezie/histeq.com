{% extends "base.twig" %}

{% block content %}
    <main class="main-content">
        <div class="container mx-auto px-6 lg:px-12 py-24">
            <div class="max-w-4xl mx-auto">

                {% if posts %}
                    {# Blog/Archive List #}
                    <div class="space-y-8">
                        {% for post in posts %}
                            <article class="bg-white rounded-lg shadow-sm border p-6">
                                <h2 class="text-h4-mobile lg:text-h4-desktop text-navy-900 mb-4">
                                    <a href="{{ post.link }}" class="hover:text-primary-600 transition-colors">
                                        {{ post.title }}
                                    </a>
                                </h2>

                                {% if post.thumbnail %}
                                    <div class="mb-4">
                                        <img src="{{ post.thumbnail.src|resize(400, 200) }}"
                                             alt="{{ post.thumbnail.alt }}"
                                             class="w-full h-48 object-cover rounded-lg">
                                    </div>
                                {% endif %}

                                <div class="text-navy-700 mb-4">
                                    {{ post.preview(30) }}
                                </div>

                                <div class="flex justify-between items-center text-sm text-navy-500">
                                    <span>{{ post.date|date('F j, Y') }}</span>
                                    <a href="{{ post.link }}" class="text-primary-600 hover:text-primary-700 font-medium">
                                        Read More â†’
                                    </a>
                                </div>
                            </article>
                        {% endfor %}
                    </div>

                    {# Pagination #}
                    {% if pagination %}
                        <div class="mt-12 flex justify-center">
                            {{ pagination }}
                        </div>
                    {% endif %}

                {% else %}
                    {# No content found #}
                    <div class="text-center py-16">
                        <h1 class="text-h3-mobile lg:text-h3-desktop text-navy-900 mb-6">
                            Page Not Found
                        </h1>
                        <p class="text-text-lg text-navy-700 mb-8">
                            The page you're looking for couldn't be found.
                        </p>
                        <a href="{{ site.url }}"
                           class="inline-flex items-center justify-center px-8 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors duration-200">
                            Return to Homepage
                        </a>
                    </div>
                {% endif %}

            </div>
        </div>
    </main>
{% endblock %}