{% extends "base.twig" %}

{% block content %}
    <main class="main-content">

        {# Hero Section - Exact Figma Design Match #}
        <section class="hero-section bg-gray-50" data-testid="hero-section">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center min-h-[85vh] py-20 lg:py-24">

                    <!-- Hero Content -->
                    <div class="lg:order-1 space-y-8">
                        <div class="space-y-6">
                            <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-navy-900 leading-[1.1] tracking-tight">
                                Preserving History,<br>
                                Empowering<br>
                                Communities<br>
                                Through Strategic<br>
                                Investment
                            </h1>

                            <p class="text-lg lg:text-xl text-gray-600 leading-relaxed max-w-lg font-light">
                                Building sustainable communities while honoring our architectural heritage through strategic State Historic Tax Credit investments.
                            </p>
                        </div>

                        <!-- Clean Single CTA Button (Figma Style) -->
                        <div class="pt-4">
                            <a href="#mission"
                               class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700 transition-colors duration-200 text-base"
                               data-testid="hero-primary-cta">
                                Our historic mission
                            </a>
                        </div>
                    </div>

                    <!-- Hero Image (Figma Style - Community Focus) -->
                    <div class="lg:order-2">
                        <div class="relative">
                            <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=800&h=600&fit=crop&crop=center"
                                 alt="Community members collaborating around a table"
                                 class="w-full h-[400px] lg:h-[500px] object-cover rounded-xl shadow-lg">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {# Our Historic Mission Section - Figma Clean Design #}
        <section id="mission" class="py-16 lg:py-20 bg-white" data-testid="historic-mission">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="max-w-4xl mx-auto text-center">
                    <h2 class="text-3xl lg:text-4xl font-bold text-navy-900 mb-8 leading-tight">
                        Our historic mission
                    </h2>
                    <p class="text-lg lg:text-xl text-gray-600 leading-relaxed mb-12 max-w-3xl mx-auto">
                        Since 2001, Historic Equity Inc. has been dedicated to preserving America's architectural heritage while empowering communities through strategic investment partnerships.
                    </p>
                </div>
            </div>
        </section>

        {# How We Preserve History Section - Figma Design #}
        <section id="services" class="py-16 lg:py-20 bg-gray-50" data-testid="preserve-history">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="text-center mb-16">
                    <h2 class="text-3xl lg:text-4xl font-bold text-navy-900 mb-8 leading-tight">
                        How we preserve history
                    </h2>
                </div>

                <!-- Community Focus Content -->
                <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center mb-16">
                    <div class="space-y-6">
                        <img src="https://images.unsplash.com/photo-1560472355-536de3962603?w=600&h=400&fit=crop&crop=center"
                             alt="Historic building renovation"
                             class="w-full h-64 lg:h-80 object-cover rounded-lg shadow-md">
                    </div>

                    <div class="space-y-6">
                        <h3 class="text-2xl lg:text-3xl font-semibold text-navy-900 leading-tight">
                            Through strategic investment partnerships
                        </h3>
                        <p class="text-lg text-gray-600 leading-relaxed">
                            We work directly with property owners to maximize State Historic Tax Credit benefits while preserving architectural heritage and building sustainable communities for future generations.
                        </p>
                        <div class="space-y-4">
                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-6 h-6 bg-primary-600 rounded-full flex items-center justify-center mt-1">
                                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <p class="text-gray-700">Expert project evaluation and SHTC compliance guidance</p>
                            </div>
                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-6 h-6 bg-primary-600 rounded-full flex items-center justify-center mt-1">
                                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <p class="text-gray-700">Strategic capital deployment and project financing</p>
                            </div>
                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-6 h-6 bg-primary-600 rounded-full flex items-center justify-center mt-1">
                                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <p class="text-gray-700">Ongoing support through project completion and certification</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Success Stories Section -->
                <div class="mb-16">
                    <div class="text-center mb-12">
                        <h3 class="text-2xl lg:text-3xl font-semibold text-navy-900 mb-4">
                            Our successful preservation stories
                        </h3>
                        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                            Across 17+ states, we've helped preserve over 200 historic properties
                        </p>
                    </div>

                    <div class="grid md:grid-cols-3 gap-8 mb-12">
                        <div class="text-center p-6">
                            <div class="text-4xl font-bold text-primary-600 mb-2">24+</div>
                            <div class="text-gray-600">Years Experience</div>
                        </div>
                        <div class="text-center p-6">
                            <div class="text-4xl font-bold text-primary-600 mb-2">$1B+</div>
                            <div class="text-gray-600">Investment Portfolio</div>
                        </div>
                        <div class="text-center p-6">
                            <div class="text-4xl font-bold text-primary-600 mb-2">200+</div>
                            <div class="text-gray-600">Projects Completed</div>
                        </div>
                    </div>
                </div>

                <!-- CTA Section -->
                <div class="text-center">
                    <h3 class="text-2xl lg:text-3xl font-semibold text-navy-900 mb-6">
                        Why partner with Historic Equity Inc?
                    </h3>
                    <div class="grid md:grid-cols-3 gap-8 mb-12">
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-navy-900 mb-2">Trusted expertise</h4>
                            <p class="text-gray-600 text-sm">Over two decades of specialized SHTC investment experience</p>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-navy-900 mb-2">Community matters</h4>
                            <p class="text-gray-600 text-sm">Building sustainable communities through strategic partnerships</p>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-navy-900 mb-2">Maximum impact</h4>
                            <p class="text-gray-600 text-sm">Optimizing benefits while preserving architectural heritage</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {# Join Our Preservation Mission Section - Figma Design #}
        <section class="py-16 lg:py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-600 text-white" data-testid="join-mission">
            <div class="container mx-auto px-6 lg:px-12 text-center">
                <h2 class="text-3xl lg:text-4xl font-bold mb-8 leading-tight">
                    Join our preservation mission
                </h2>
                <p class="text-lg lg:text-xl max-w-3xl mx-auto mb-8 text-white/90">
                    Partner with Historic Equity Inc. to preserve America's architectural heritage while building sustainable communities through strategic investment.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/contact"
                       class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-lg hover:bg-gray-100 transition-colors duration-200"
                       data-testid="mission-contact-cta">
                        Get started today
                    </a>
                    <a href="/projects"
                       class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-700 transition-colors duration-200"
                       data-testid="mission-projects-cta">
                        View our work
                    </a>
                </div>
            </div>
        </section>

    </main>

{% endblock %}