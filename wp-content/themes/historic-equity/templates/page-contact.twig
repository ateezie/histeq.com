{% extends "base.twig" %}

{% block content %}
    <main role="main" aria-label="Contact Us">

        {# Hero Section #}
        <section class="py-16 lg:py-20 bg-white">
            <div class="container mx-auto px-6 lg:px-12 text-center">
                <h1 class="text-4xl lg:text-5xl font-bold mb-6 text-gray-900 leading-tight">
                    Connect with us
                </h1>
                <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto">
                    Reach out to Historic Equity Inc for expert guidance on historic rehabilitation tax credit investments
                </p>
            </div>
        </section>

        {# Contact Information & Map Section #}
        <section class="py-16 lg:py-20 bg-gray-50">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">

                    {# Contact Information #}
                    <div>
                        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact us</h2>
                        <p class="text-gray-600 mb-8">
                            We're here to help you maximize the potential of your historic rehabilitation project.
                        </p>

                        {# Contact Details #}
                        <div class="space-y-6">
                            <div class="flex items-start">
                                <div class="flex-shrink-0 w-6 h-6 mt-1">
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="font-semibold text-gray-900">Email</h3>
                                    <p class="text-gray-600">info@historicequity.com</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex-shrink-0 w-6 h-6 mt-1">
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="font-semibold text-gray-900">Phone</h3>
                                    <p class="text-gray-600">(314) 555-0199</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex-shrink-0 w-6 h-6 mt-1">
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="font-semibold text-gray-900">Office</h3>
                                    <p class="text-gray-600">100 N Street NW, Washington DC 20005</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Map Placeholder #}
                    <div class="bg-gray-300 rounded-lg h-96 flex items-center justify-center">
                        <div class="text-center">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <p class="text-gray-500">Interactive Map</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {# Contact Form Section #}
        <section class="py-16 lg:py-20 bg-orange-50">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">

                    {# Contact Information Left Side #}
                    <div>
                        <h2 class="text-3xl font-bold text-gray-900 mb-6">Send us a message</h2>
                        <p class="text-gray-600 mb-8">
                            Have your project details and investment personally reviewed by our team.
                        </p>

                        <div class="space-y-4">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                <span class="text-gray-600">info@historicequity.org</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                                <span class="text-gray-600">(800) 555-0199</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                <span class="text-gray-600">100 N Street NW, Washington DC 20005</span>
                            </div>
                        </div>
                    </div>

                    {# Contact Form #}
                    <div class="bg-white p-8 rounded-lg shadow-sm">
                        <form class="space-y-6">
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div>
                                    <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">First name</label>
                                    <input type="text" id="first-name" name="first-name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                                </div>
                                <div>
                                    <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">Last name</label>
                                    <input type="text" id="last-name" name="last-name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                                </div>
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                            </div>

                            <div>
                                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone number</label>
                                <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                            </div>

                            <div>
                                <label for="topic" class="block text-sm font-medium text-gray-700 mb-2">Send your inquiry topic</label>
                                <select id="topic" name="topic" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                                    <option value="">Select one</option>
                                    <option value="general">General inquiry</option>
                                    <option value="project">Project consultation</option>
                                    <option value="investment">Investment opportunity</option>
                                    <option value="partnership">Partnership</option>
                                </select>
                            </div>

                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div>
                                    <label for="interest" class="block text-sm font-medium text-gray-700 mb-2">What are you interested in?</label>
                                    <select id="interest" name="interest" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                                        <option value="">Historic renovation</option>
                                        <option value="tax-credits">Tax credit consulting</option>
                                        <option value="investment">Investment opportunity</option>
                                        <option value="financing">Project financing</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">Tax credit consulting timeline</label>
                                    <select id="timeline" name="timeline" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                                        <option value="">Immediate</option>
                                        <option value="1-3-months">1-3 months</option>
                                        <option value="3-6-months">3-6 months</option>
                                        <option value="6-12-months">6-12 months</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                            </div>

                            <div>
                                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                                <textarea id="message" name="message" rows="4" placeholder="Tell us about your project" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 resize-none"></textarea>
                            </div>

                            <div class="flex items-start">
                                <input type="checkbox" id="terms" name="terms" class="mt-1 h-4 w-4 text-primary-600 border-gray-300 rounded focus:ring-2 focus:ring-primary-500">
                                <label for="terms" class="ml-3 text-sm text-gray-600">
                                    I accept the terms and conditions
                                </label>
                            </div>

                            <button type="submit" class="w-full bg-primary-600 text-white font-medium py-3 px-6 rounded-lg hover:bg-primary-700 transition-colors duration-200">
                                Submit
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        {# Locations Section #}
        <section class="py-16 lg:py-20 bg-white">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="mb-12">
                    <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-gray-900">Locations</h2>
                    <p class="text-lg text-gray-600">Find our offices across key markets for historic tax credit investments</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
                    {# Locations List #}
                    <div class="space-y-8">
                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">Washington DC</h3>
                            <p class="text-gray-600 mb-2">100 N Street NW, Washington DC 20005</p>
                            <a href="#" class="text-primary-600 hover:text-primary-700 font-medium">View office</a>
                        </div>

                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">New York</h3>
                            <p class="text-gray-600 mb-2">45 Rockefeller Plaza, New York NY 10111</p>
                            <a href="#" class="text-primary-600 hover:text-primary-700 font-medium">View office</a>
                        </div>

                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">Boston</h3>
                            <p class="text-gray-600 mb-2">200 Beacon Street, Boston MA 02116</p>
                            <a href="#" class="text-primary-600 hover:text-primary-700 font-medium">View office</a>
                        </div>
                    </div>

                    {# Map Placeholder #}
                    <div class="bg-gray-300 rounded-lg h-96 flex items-center justify-center">
                        <div class="text-center">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                            </svg>
                            <p class="text-gray-500">Interactive Map</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {# FAQ Section #}
        <section class="py-16 lg:py-20 bg-gray-50">
            <div class="container mx-auto px-6 lg:px-12">
                <div class="mb-12">
                    <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-gray-900">FAQs</h2>
                    <p class="text-lg text-gray-600">Quick answers to common questions about historic tax credit investments</p>
                </div>

                <div class="max-w-4xl mx-auto space-y-4">
                    {# FAQ Item 1 #}
                    <div class="bg-white rounded-lg shadow-sm">
                        <button class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg" onclick="toggleFAQ('faq1')">
                            <span class="font-semibold text-gray-900">What are historic tax credits?</span>
                            <svg id="faq1-icon" class="w-5 h-5 text-gray-400 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div id="faq1-content" class="hidden px-6 pb-4">
                            <p class="text-gray-600">Historic tax credits are tax incentives available that provide benefits for owners who rehabilitate a certified historic structure and encourage preservation of historic properties.</p>
                        </div>
                    </div>

                    {# FAQ Item 2 #}
                    <div class="bg-white rounded-lg shadow-sm">
                        <button class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg" onclick="toggleFAQ('faq2')">
                            <span class="font-semibold text-gray-900">How do we qualify?</span>
                            <svg id="faq2-icon" class="w-5 h-5 text-gray-400 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div id="faq2-content" class="hidden px-6 pb-4">
                            <p class="text-gray-600">To qualify, your property must be listed on the National Register of Historic Places or deemed to contribute to a National Register Historic District. The rehabilitation must meet specific standards.</p>
                        </div>
                    </div>

                    {# FAQ Item 3 #}
                    <div class="bg-white rounded-lg shadow-sm">
                        <button class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg" onclick="toggleFAQ('faq3')">
                            <span class="font-semibold text-gray-900">What projects do you invest in?</span>
                            <svg id="faq3-icon" class="w-5 h-5 text-gray-400 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div id="faq3-content" class="hidden px-6 pb-4">
                            <p class="text-gray-600">We focus on commercial and residential historic rehabilitation projects across various sectors including hospitality, residential and commercial real estate.</p>
                        </div>
                    </div>

                    {# FAQ Item 4 #}
                    <div class="bg-white rounded-lg shadow-sm">
                        <button class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg" onclick="toggleFAQ('faq4')">
                            <span class="font-semibold text-gray-900">What are the financial benefits?</span>
                            <svg id="faq4-icon" class="w-5 h-5 text-gray-400 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div id="faq4-content" class="hidden px-6 pb-4">
                            <p class="text-gray-600">Historic tax credits can provide up to 20% federal tax credit and additional state credits, significantly improving investment returns and financing capabilities for qualifying projects.</p>
                        </div>
                    </div>

                    {# FAQ Item 5 #}
                    <div class="bg-white rounded-lg shadow-sm">
                        <button class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg" onclick="toggleFAQ('faq5')">
                            <span class="font-semibold text-gray-900">How long is the process?</span>
                            <svg id="faq5-icon" class="w-5 h-5 text-gray-400 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div id="faq5-content" class="hidden px-6 pb-4">
                            <p class="text-gray-600">The process typically takes 6-18 months, depending on project complexity, property condition, and approval time from historic preservation authorities.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>

    <script>
        function toggleFAQ(faqId) {
            const content = document.getElementById(faqId + '-content');
            const icon = document.getElementById(faqId + '-icon');

            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                content.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        }
    </script>
{% endblock %}